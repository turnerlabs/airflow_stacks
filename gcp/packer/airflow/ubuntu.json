{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "vpcid_to_build_in": "",
        "subnetid_to_build_in": "",
        "tag_application": "",
        "tag_contact_email": "",
        "tag_customer": "",
        "tag_team": "",
        "tag_environment": ""
    },
    "builders": [{
        "type": "googlecompute",
        "project_id": "cloud-arch",
        "source_image": "ubuntu-1604-xenial-v20180814",
        "ssh_username": "ubuntu",
        "zone": "us-east1-b",
        "image_name": "airflow-{{timestamp}}",
        "image_labels": {
            "application": "airflow",
            "customer": "airflow",
            "team": "airflow",
            "environment": "dev",
            "contact-email": "one-day-this-might-work"
        }
    }],
    "provisioners": [{
            "type": "file",
            "source": "adduser.py",
            "destination": "/home/ubuntu/adduser.py"
        },
        {
            "type": "file",
            "source": "airflow-scheduler.service",
            "destination": "/home/ubuntu/airflow-scheduler.service"
        },
        {
            "type": "file",
            "source": "airflow-webserver.service",
            "destination": "/home/ubuntu/airflow-webserver.service"
        },
        {
            "type": "file",
            "source": "airflow-worker.service",
            "destination": "/home/ubuntu/airflow-worker.service"
        },
        {
            "type": "file",
            "source": "airflow.conf",
            "destination": "/home/ubuntu/airflow.conf"
        },
        {
            "type": "file",
            "source": "airflow.sysconfig",
            "destination": "/home/ubuntu/airflow.sysconfig"
        },
        {
            "type": "file",
            "source": "logrotate.conf",
            "destination": "/home/ubuntu/logrotate.conf"
        },
        {
            "type": "file",
            "source": "crontab",
            "destination": "/home/ubuntu/crontab"
        },
        {
            "type": "shell",
            "execute_command": "{{.Vars}} bash '{{.Path}}'",
            "script": "provision.sh"
        }
    ]
}