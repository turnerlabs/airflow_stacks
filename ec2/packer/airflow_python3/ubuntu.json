{
    "variables": {
        "access_key": "",
        "secret_key": "",
        "vpcid_to_build_in": "",
        "subnetid_to_build_in": "",
        "tag_application": "",
        "tag_contact_email": "",
        "tag_customer": "",
        "tag_team": "",
        "tag_environment": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `access_key`}}",
        "secret_key": "{{user `secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-41e0b93b",
        "instance_type": "t2.medium",
        "ssh_username": "ubuntu",
        "ami_name": "airflowpython3 {{timestamp}}",
        "vpc_id": "{{user `vpcid_to_build_in`}}",
        "subnet_id": "{{user `subnetid_to_build_in`}}",
        "run_tags": {
            "Name": "airflow packer ami builder",
            "application": "{{user `tag_application`}}",
            "contact-email": "{{user `tag_contact_email`}}",
            "customer": "{{user `tag_customer`}}",
            "team": "{{user `tag_team`}}",
            "environment": "{{user `tag_environment`}}"
        }
    }],
    "provisioners": [{
            "type": "file",
            "source": "adduser.py",
            "destination": "/home/ubuntu/adduser.py"
        },
        {
            "type": "file",
            "source": "./systemd/airflow-scheduler.service",
            "destination": "/home/ubuntu/airflow-scheduler.service"
        },
        {
            "type": "file",
            "source": "./systemd/airflow-webserver.service",
            "destination": "/home/ubuntu/airflow-webserver.service"
        },
        {
            "type": "file",
            "source": "./systemd/airflow-worker.service",
            "destination": "/home/ubuntu/airflow-worker.service"
        },
        {
            "type": "file",
            "source": "airflow.conf",
            "destination": "/home/ubuntu/airflow.conf"
        },
        {
            "type": "file",
            "source": "airflow.sysconfig",
            "destination": "/home/ubuntu/airflow.sysconfig"
        },
        {
            "type": "file",
            "source": "./snowflake/snowflake_hook.py",
            "destination": "/home/ubuntu/snowflake_hook.py"
        },
        {
            "type": "file",
            "source": "./snowflake/snowflake_operator.py",
            "destination": "/home/ubuntu/snowflake_operator.py"
        },
        {
            "type": "file",
            "source": "./snowflake/operators__init__.py",
            "destination": "/home/ubuntu/operators__init__.py"
        },
        {
            "type": "file",
            "source": "./snowflake/hooks__init__.py",
            "destination": "/home/ubuntu/hooks__init__.py"
        },
        {
            "type": "file",
            "source": "./snowflake/models.py",
            "destination": "/home/ubuntu/models.py"
        },
        {
            "type": "file",
            "source": "./jdbc/jdbc_hook.py",
            "destination": "/home/ubuntu/jdbc_hook.py"
        },
        {
            "type": "file",
            "source": "./jdbc/snowflake-jdbc-3.5.4.jar",
            "destination": "/home/ubuntu/snowflake-jdbc-3.5.4.jar"
        },
        {
            "type": "file",
            "source": "./odbc/msodbcsql17_17.1.0.1-1_amd64.deb",
            "destination": "/home/ubuntu/msodbcsql17_17.1.0.1-1_amd64.deb"
        },
        {
            "type": "file",
            "source": "logrotate.conf",
            "destination": "/home/ubuntu/logrotate.conf"
        },
        {
            "type": "file",
            "source": "crontab",
            "destination": "/home/ubuntu/crontab"
        },
        {
            "type": "file",
            "source": "awslogs.conf",
            "destination": "/home/ubuntu/awslogs.conf"
        },
        {
            "type": "shell",
            "execute_command": "{{.Vars}} bash '{{.Path}}'",
            "script": "provision.sh"
        }
    ]
}